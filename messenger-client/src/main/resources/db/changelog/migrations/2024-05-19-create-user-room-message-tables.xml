<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-05-19-create-user-room-message-tables" author="admin">
        <createTable tableName="user_session">
            <column name="username" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="refresh_token" type="VARCHAR"/>
        </createTable>

        <createTable tableName="rooms">
            <column name="room_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="participant_username" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="VARCHAR"/>
            <column name="status" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="encryption_payload" type="BYTEA"/>
        </createTable>

        <createTable tableName="messages">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="room_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="data_type" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="BYTEA">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>